
<div class="modal fade" id="previewModal" tabindex="-1" aria-labelledby="previewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-primary text-white rounded-top-4">
                <h5 class="modal-title" id="previewModalLabel fw-bold">Vista Previa del Curso</h5>
                <button type="button" class="btn-close btn-close-white" 
                    
    
                data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row">
                    <div class="col-md-5 mb-3">
                        <img src="" id="prev-imagen" class="img-fluid rounded-3 shadow-sm mb-3" alt="prev-alt">
                        <div class="p-3 bg-light rounded-3">
                            <p class="mb-1"><strong>Modalidad:</strong> <span id="prev-modalidad" class="badge bg-info text-dark"></span></p>
                            <p class="mb-0"><strong>Duración:</strong> <span id="prev-duracion" class="text-muted"></span></p>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <h3 id="prev-titulo" class="text-primary fw-bold mb-3"></h3>
                        <p id="prev-descripcion" class="text-secondary"></p>
                        
                        <h5 class="fw-bold mt-4"><i class="fas fa-bullseye me-2 text-danger"></i>Objetivos</h5>
                        <p id="prev-objetivos" class="small"></p>
                        
                        <h5 class="fw-bold mt-4"><i class="fas fa-list-ul me-2 text-success"></i>Temario</h5>
                        <p id="prev-temario" class="small"></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>


<script>
    // Script para cargar datos dinámicamente en el modal
    document.addEventListener('DOMContentLoaded', function() {
        const previewButtons = document.querySelectorAll('.btn-preview');

        previewButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Asignación de textos a los elementos del modal
                document.getElementById('prev-titulo').innerText = this.getAttribute('data-titulo') || '';
                document.getElementById('prev-descripcion').innerText = this.getAttribute('data-descripcion') || '';
                document.getElementById('prev-objetivos').innerText = this.getAttribute('data-objetivos') || '';
                document.getElementById('prev-temario').innerText = this.getAttribute('data-temario') || '';
                document.getElementById('prev-modalidad').innerText = this.getAttribute('data-modalidad') || '';
                document.getElementById('prev-duracion').innerText = this.getAttribute('data-duracion') || '';

                // Manejo de la imagen y su texto alternativo para accesibilidad
                const imgElement = document.getElementById('prev-imagen');
                if (imgElement) {
                    imgElement.src = this.getAttribute('data-imagen') || 'https://via.placeholder.com/400x250?text=Sin+Imagen';
                    
                    // Se asigna el texto alternativo directamente al atributo 'alt' de la imagen
                    imgElement.alt = this.getAttribute('data-alt') || 'Imagen del curso';
                }
            });
        }); 
    });
</script>