<main class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark py-3">
                    <h2 class="h4 mb-0"><i class="fas fa-edit me-2"></i>Editar Noticia</h2>
                </div>
      
                <div class="card-body p-4">
                    <form action="/admin/noticias/editar/<%= noticia.id %>?_method=PUT" method="POST">
                        
                        <div class="row">
                            <div class="col-md-7 mb-3">
                                <label for="titulo" class="form-label fw-bold">TÃ­tulo de la noticia</label>
                                <input type="text" class="form-control form-control-lg" id="titulo" name="titulo" value="<%= noticia.titulo %>" required>
                            </div>

                            <div class="col-md-5 mb-3">
                                <label for="slug" class="form-label fw-bold">Slug (URL)</label>
                                <input type="text" class="form-control form-control-lg bg-light" id="slug" name="slug" value="<%= noticia.slug %>" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="copete" class="form-label fw-bold">Copete (Resumen corto)</label>
                            <textarea class="form-control" id="copete" name="copete" rows="2" required><%= noticia.copete %></textarea>
                        </div>

                        <div class="row align-items-center mb-3">
                            <div class="col-md-8">
                                <label for="imagenUrl" class="form-label fw-bold">URL de la Imagen</label>
                                <input type="url" class="form-control mb-2" id="imagenUrl" name="imagenUrl" value="<%= noticia.imagenUrl %>" required>
                                
                                <label for="alt" class="form-label fw-bold text-primary">Texto Alternativo (Accesibilidad)</label>
                                <input type="text" class="form-control" id="alt" name="alt" value="<%= noticia.alt || '' %>" placeholder="Describe la imagen para lectores de pantalla" required>
                                <div class="form-text">Ej: "Persona utilizando una computadora con el lector de pantalla NVDA".</div>
                            </div>
                            <div class="col-md-4 text-center">
                                <div id="preview-container" class="mt-2 border rounded d-flex align-items-center justify-content-center bg-light" style="height: 120px; overflow: hidden;">
                                    <img id="img-preview" src="<%= noticia.imagenUrl %>" alt="<%= noticia.alt %>" class="img-fluid">
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="contenido" class="form-label fw-bold">Contenido Principal</label>
                            <textarea class="form-control" id="contenido" name="contenido" rows="12" required><%= noticia.contenido %></textarea>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="/admin/dashboard" class="btn btn-outline-secondary px-4">Cancelar</a>
                            <button type="submit" class="btn btn-warning px-5 fw-bold">Actualizar Noticia</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    // Script para actualizar la preview y el atributo alt en tiempo real
    const imagenInput = document.getElementById('imagenUrl');
    const altInput = document.getElementById('alt');
    const imgPreview = document.getElementById('img-preview');

    imagenInput.addEventListener('input', () => {
        imgPreview.src = imagenInput.value;
    });

    altInput.addEventListener('input', () => {
        imgPreview.alt = altInput.value;
    });
</script>