<%- include('../partials/header') %> 

<main id="main-content" role="main" aria-labelledby="noticia-detail-title" class="container py-5">
    
    <section class="row justify-content-center">
        <div class="col-lg-10">
            
            <h1 class="display-5 fw-bolder mb-3 text-primary"><%= noticia.titulo %></h1>

<p class="text-muted small mb-4 border-bottom pb-3">
    Publicado el <%= noticia.fecha %> | Programa Ágora
</p>

<% if (noticia.imagenUrl) { %>
    <img src="<%= noticia.imagenUrl %>" class="img-fluid rounded-3 mb-5 shadow-sm" style="width: 100%; max-height: 500px; object-fit: cover;">
<% } %>

<div class="noticia-body">
    
    <div class="copete mb-4 lead fw-bold text-secondary" style="font-size: 1.25rem; border-left: 4px solid #007bff; padding-left: 15px;">
        <%= noticia.copete %>
    </div>

    <div class="contenido fs-5 text-dark" style="white-space: pre-wrap; line-height: 1.8;">
        <%- noticia.contenido %>
    </div>
    
</div>

            <div class="share-buttons border-top pt-4 mb-4">
    <p class="text-uppercase fw-bold small text-secondary mb-3">Compartir noticia:</p>
    <div class="d-flex gap-2">
        
        <a href="https://www.facebook.com/sharer/sharer.php?u=https://agoraargentina.com/noticias/<%= noticia.slug %>" 
           target="_blank" 
           class="btn btn-primary d-flex align-items-center rounded-pill px-3" 
           style="background-color: #1877F2; border: none;">
           <i class="fab fa-facebook-f me-2"></i> Facebook
        </a>

        <a href="https://www.linkedin.com/sharing/share-offsite/?url=https://agoraargentina.com/noticias/<%= noticia.slug %>" 
           target="_blank" 
           class="btn btn-info text-white d-flex align-items-center rounded-pill px-3" 
           style="background-color: #0A66C2; border: none;">
           <i class="fab fa-linkedin-in me-2"></i> LinkedIn
        </a>

    </div>
</div>
            <div class="border-top pt-4">
                <a href="/noticias" class="btn btn-outline-primary rounded-pill px-4" role="button">
                    ← Volver al Archivo de Noticias
                </a>
            </div>
        </div>
    </section>
    
</main>

<%- include('../partials/footer') %>